{
    "compilerOptions": {
      "target": "ES2016",
      "lib": ["dom", "ES2016"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "esnext",
      "jsx": "react-jsx",
      "types": ["jest", "react", "react-dom"] // Make sure jest and react types are here
    },
    "include": [
      "src"
    ]
  }